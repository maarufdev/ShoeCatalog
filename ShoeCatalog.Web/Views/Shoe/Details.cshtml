@model ShoeDetailsVM;

<div class="container d-flex justify-content-between align-items-baseline mt-4 mb-3">
    <h1>Details</h1>
    <a asp-action="Index"
       class="btn btn-outline-dark fw-bold text-uppercase d-flex gap-1 px-4 ms-auto">
        <i class="bi bi-arrow-return-left"></i>
        <span>Back to List</span>
    </a>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-sm-12">
            <div class="image-container">
                <img src="~/images/@Model.ImageFileName" />
            </div>
        </div>

        <div class="col-lg-6 col-sm-12 shadow px-4 py-3">
            <div class="details_header mb-3">
                <h3 class="mb-0 fw-bold">@Model.Name</h3>
                <p class="fs-6 fw-light mb-1">@Model.ShortDescription</p>
                <p class="fw-bold fs-4">₱@Model.Price</p>
            </div>
            

            <div class="details_categories_container">
                <div class="d-flex gap-3">
                    <p>Brand: <span class="fst-italic">@Model.BrandName</span></p>
                    <p>Color: <span class="fst-italic">@Model.Color</span></p>
                    <p>Size: <span class="fst-italic">@Model.Size</span></p>
                    <p>Sex: <span class="fst-italic">@Model.Gender.ToString()</span></p>
                </div>

                <div class="p-0 d-flex">
                    <p class="m-0">Categories:</p>
                    @if(Model.ShoeCategories != null)
                    {
                        <ul class="ms-5 p-0 d-flex gap-4">
                            @foreach (var category in @Model.ShoeCategories)
                            {
                                <li>@category</li>
                            }
                        </ul>
                    }
                </div>
            </div>

            <div class="description_container p-0">
                <h5 class="mb-2">Description</h5>
                <p class="fw-light">@Model.FullDescription</p>
            </div>
            
        </div>
    </div>
</div>